<view class="apt-user">
  <!-- 个人信息开始 -->
  <view class="apt-user-profile">
    <block wx:if="{{ !!userInfo.nickName }}">
      <view class="apt-user-bg">
        <!-- <image src="{{ userInfo.avatarUrl }}"></image> -->
      </view>
      <view class="imageWrapper">
        <!-- <image src="{{ userInfo..avatarUrl }}"></image> -->
      </view>
      <view class="nickName"></view>
    </block>  
    <block wx:else>
      <button open-type="getUserInfo" bindgetuserinfo="getUserInfo"
      >
      登录
      </button>
    </block>
  </view>
  <!-- 个人信息结束 -->
  <!-- 订单功能区开始 -->
    <view class="apt-user-orderFunc">
      <view class="apt-user-orderFunc-item">
        <view class="iconfont incon-tuikuan"></view>
        <view>代收款</view>
      </view>
      <view class="apt-user-orderFunc-item">
        <view class="iconfont incon-tuikuan"></view>
        <view>待付款</view>
      </view>
      <view class="apt-user-orderFunc-item">
        <view class="iconfont incon-tuikuan"></view>
        <view>退货/退款</view>
      </view>
      <view class="apt-user-orderFunc-item">
        <view class="iconfont incon-tuikuan"></view>
        <view>全部订单</view>
      </view>
    </view>
  <!-- 订单功能区结束 -->

  <!-- 系统功能区开始 -->
  <view class="apt-user-systemFunc">
    <view class="apt-user-systemFunc">
      <view class="left">
        <view class="iconfont"></view>
        <view class="text"></view>
      </view>
      <view class="right">
        <view class="iconfont"></view>
        <view class="text"></view>
      </view>
    </view>
  </view>
  <!-- 系统功能区结束 -->

  
  
</view>
